<Page x:Class="AgencyCurse.Pages.AdminPages.AdminP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgencyCurse.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminP">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="600 "/>
        </Grid.ColumnDefinitions>
        <Grid>
            <StackPanel>
                <Button x:Name="TuorsBT" Content="Туры" Margin="10,5" Click="TuorsBT_Click"/>
                <Button x:Name="HotelsBT" Content="Отели" Margin="10,5" Click="HotelsBT_Click"/>
                <Button x:Name="HystoryBT" Content="Заказанные туры" Margin="10,5" Click="HystoryBT_Click"/>
                <Button x:Name="NotBT" Content="Запросы на скидки" Margin="10,5" Click="NotBT_Click"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="BackBT" Content="Назад" Margin="10,5" Click="BackBT_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="/Images/logoIMG.jpg" />
        </Grid>
    </Grid>
</Page>
